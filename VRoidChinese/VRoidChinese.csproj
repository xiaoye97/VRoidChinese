<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <AssemblyName>VRoidChinese</AssemblyName>
    <Description>i18n plugin for VRoidStudio</Description>
    <OutputType>Library</OutputType>
    <AppDesignerFolder>Properties</AppDesignerFolder>
    <Version>1.2.0</Version>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <LangVersion>latest</LangVersion>
    <RootNamespace>VRoidChinese</RootNamespace>
    <PlatformTarget>x64</PlatformTarget>
    <ProduceReferenceAssembly>False</ProduceReferenceAssembly>
    <SignAssembly>False</SignAssembly>
    <Authors>xiaoye97, rainbowflesh</Authors>
    <Copyright>xiaoye97 Â© 2024</Copyright>
    <PackageProjectUrl>https://github.com/xiaoye97/VRoidChinese</PackageProjectUrl>
    <PackageReadmeFile>readme.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/xiaoye97/VRoidChinese</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>unity plugin</PackageTags>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <AssemblyOriginatorKeyFile>C:\Users\catki\keypair.snk</AssemblyOriginatorKeyFile>
  </PropertyGroup>

